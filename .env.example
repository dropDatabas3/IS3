# Example environment variables for development
# Database (backend)
PGUSER=app
PGPASSWORD=password
PGDATABASE=app
PGHOST=db
PGPORT=5432
# Full connection string (optional). If set, backend uses this instead of individual PG* vars
# DATABASE_URL=postgres://app:password@db:5432/app?sslmode=disable

# Frontend public API URL (used at build or runtime)
NEXT_PUBLIC_API_URL=http://backend:8000

# Cloudinary / uploads (frontend)
NEXT_PUBLIC_CLOUDINARY_URL=
NEXT_PUBLIC_UPLOAD_PRESET=

# Other envs
ENV=development
PORT=8000
